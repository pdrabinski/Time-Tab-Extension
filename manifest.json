{
  "name": "Time NewTab",
  "version": "1.1",
  "author": "Paul Drabinski",
  "description": "Show time in new tab.",
  "permissions":["declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  // "content_security_policy": "default-src https:; script-src https: 'unsafe-inline'; style-src https: 'unsafe-inline'",
  // "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js; style-src https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css; font-src https://fonts.googleapis.com/css?family=Oswald; object-src 'self'",
  "content_security_policy": "script-src 'unsafe-inline' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js; style-src https://fonts.googleapis.com/css?family=Oswald; object-src 'self'",
  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/clock_16.png",
      "32": "images/clock_32.png",
      "64": "images/clock_64.png",
      "128": "images/clock_128.png"
    }
  },
  "icons": {
    "16": "images/clock_16.png",
    "32": "images/clock_32.png",
    "64": "images/clock_64.png",
    "128": "images/clock_128.png"
  },
  "manifest_version":2
}
